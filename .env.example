# Environment Configuration Example
# Copy this file to .env and fill in your values

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=development  # development, staging, production, test

# ============================================================================
# Slack Configuration
# ============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-1
IAM_ROLE_PREFIX=agent-system

# AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================================================
# Workflow Configuration
# ============================================================================
ENABLE_AUTO_CHECKPOINTS=true
CHECKPOINT_INTERVAL=60000  # milliseconds (60 seconds)
MAX_CHECKPOINTS=100

METRICS_RETENTION_DAYS=30
ENABLE_REALTIME_METRICS=true

# ============================================================================
# Agent Configuration
# ============================================================================
ONBOARDING_AGENT_ID=onboarding-agent
PROVISIONING_AGENT_ID=provisioning-agent

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=./logs/system.log
ENABLE_AUDIT_LOGGING=true

# ============================================================================
# Security Configuration
# ============================================================================
ENABLE_ENCRYPTION=true
ENCRYPTION_ALGORITHM=aes-256-gcm

ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

ENABLE_IP_WHITELIST=false
WHITELISTED_IPS=127.0.0.1,::1  # comma-separated list

# ============================================================================
# Database Configuration (if applicable)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_POOL_SIZE=10

# ============================================================================
# Monitoring Configuration (if applicable)
# ============================================================================
# ENABLE_METRICS=true
# METRICS_PORT=9090
# ENABLE_TRACING=false
